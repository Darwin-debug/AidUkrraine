<%= bootstrap_form_with(model: aid_proposal, data: { turbo: false }) do |form| %>
  <% if aid_proposal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(aid_proposal.errors.count, "error") %> prohibited this aid_proposal from being saved:</h2>

      <ul>
        <% aid_proposal.errors.each do |error| %>
          <li><%= error.full_message %></li>
