
<p style="color: green"><%= notice %></p>

<h1>Unvalidated aid proposals</h1>

<div id="aid_proposals">
<table class="table">
  <thead>
      <th scope="col">Country</th>
      <th scope="col">City</th>
      <th scope="col">Description</th>
      <th scope="col">Name</th>
      <th scope="col">Contact information</th>
      <th></th>
      <th></th>
  </thead>
  <tbody>
    <% @aid_proposals.each do |aid_proposal| %>
      <tr>
        <td>   <%= aid_proposal.country%> </td>
        <td>   <%= aid_proposal.city%> </td>
        <td>   <%= (aid_proposal.url? ?
           (link_to "Link", aid_proposal.url, class: "text-dark")
          : aid_proposal.description) %> </td>
        <td>   <%= aid_proposal.full_name%> </td>
        <td>   <%= aid_proposal.contact%> </td>
        <td>
          <%= link_to "Approve", {:action => :approve, :id => aid_proposal.id}, class: "btn btn-dark" %>
        </td>
        <td>
          <%= link_to "Deny", {:action => :approve, :id => aid_proposal.id}, class: "btn btn-outline-dark" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

