
<p style="color: green"><%= notice %></p>

<h1><%= t('.title')%></h1>

<div id="aid_proposals">
<table class="table">
  <thead>
      <th scope="col"><%= t('proposal.country')%></th>
      <th scope="col"><%= t('proposal.city')%></th>
      <th scope="col"><%= t('proposal.description')%></th>
      <th scope="col"><%= t('proposal.name')%></th>
      <th scope="col"><%= t('proposal.contacts')%></th>
      <th></th>
      <th></th>
  </thead>
  <tbody>
    <% @aid_proposals.each do |aid_proposal| %>
      <tr>
        <td>   <%= aid_proposal.country%> </td>
        <td>   <%= aid_proposal.city%> </td>
        <td>   <%= (aid_proposal.url? ?
           (link_to "Link", aid_proposal.url, class: "text-dark")
          : aid_proposal.description) %> </td>
        <td>   <%= aid_proposal.full_name%> </td>
        <td>   <%= aid_proposal.contact%> </td>
        <td>
          <%= link_to t('.approve'), {:action => :approve, :id => aid_proposal.id}, class: "btn btn-dark" %>
        </td>
        <td>
          <%= link_to t('.deny'), {:action => :decline, :id => aid_proposal.id}, class: "btn btn-outline-dark" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

