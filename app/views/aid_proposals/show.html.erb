<p style="color: green"><%= notice %></p>

<%= render @aid_proposal %>


  <div class="row">
    <% if user_signed_in? && current_user.email == @aid_proposal.user_email %>
      <div class="col-4">
        <%= link_to "Edit / Редагувати", edit_aid_proposal_path(@aid_proposal), class: "btn btn-info" %>
      </div>
      <div class="col-4">
      </div>
      <div class="col-4">
        <%= button_to "Remove proposal / Видалити заявку", @aid_proposal, method: :delete, class: "btn btn-danger" %>
      </div>
    <% end%>
  </div>

  <div class="col-4">
      <%= link_to "All proposals / Всі заявки", aid_proposals_path, class: "btn btn-link" %>
  </div>